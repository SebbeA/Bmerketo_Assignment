@using System.Security.Claims;
<header>
    <div class="container">
        <div class="logo"><img src="images/logo.svg" alt="bmerketo"></div>

        @if (signInManager.IsSignedIn(User))
        {
            <nav id="menu" class="menu-links">
                <a class="link" asp-controller="home" asp-action="index">HOME</a>
                <a class="link" asp-controller="products" asp-action="index">PRODUCTS</a>
                <a class="link" asp-controller="contact" asp-action="index">CONTACT</a>
            </nav>
            <nav class="menu-icons">
                <a class="link" asp-controller="products" asp-action="search"><i class="fa-regular fa-search"></i></a>
                <a class="link" asp-controller="shopping" asp-action="cart"><i class="fa-solid fa-cart-shopping"></i></a>
                <a class="link" asp-controller="profile" asp-action="index" title="@User.FindFirst("DisplayName")?.Value"><i class="fa-solid fa-user"></i></a>

                @if (signInManager.IsSignedIn(User) && User.IsInRole("admin"))
                {
                    <a class="link" asp-controller="admin" asp-action="index" title="admin"><i class="fa-duotone fa-unlock"></i></a>
                }

                <a class="link" asp-controller="logout" asp-action="index" title="log out"><i class="fa-sharp fa-solid fa-right-to-bracket fa-fade"></i></a>
            </nav>
            <div class="toggle">
                <button class="btn-toggle btn-outline-white" data-option="toggle" data-target="#menu">
                    <i id="icon" class="fa-regular fa-bars"></i>
                </button>
            </div>
        }
        else
        {
            <nav id="menu" class="menu-links">
                <a class="link" asp-controller="home" asp-action="index">HOME</a>
                <a class="link" asp-controller="products" asp-action="index">PRODUCTS</a>
                <a class="link" asp-controller="contact" asp-action="index">CONTACT</a>
            </nav>
            <nav class="menu-icons">
                <a class="link" asp-controller="products" asp-action="search"><i class="fa-regular fa-search"></i></a>
                <a class="link" asp-controller="login" asp-action="index">Login</a>
                <a class="link" asp-controller="shopping" asp-action="cart"><i class="fa-solid fa-cart-shopping"></i></a>
            </nav>
            <div class="toggle">
                <button class="btn-toggle btn-outline-white" data-option="toggle" data-target="#menu">
                    <i id="icon" class="fa-regular fa-bars"></i>
                </button>
            </div>
        }


    </div>
</header>
