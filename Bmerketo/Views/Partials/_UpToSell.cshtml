@model UpToSellViewModel

<section class="up-to-sell">
    <div class="container">
        <div class="collection-grid">

            @if (Model.Item1 != null)
            {
                <div class="item-1">
                    @foreach (var item in Model.Item1)
                    {
                        <partial name="/Views/Partials/Components/_ProductCardItem.cshtml" model="item" />
                    }
                </div>
            }

            <div class="discover">
                <div class="collection-content">
                    <div class="container">
                        <div class="title-red">@Model.TitleRed</div>
                        <div class="title">@Model.Title</div>
                        <div class="ingress">@Model.Ingress</div>
                        <div class="text">@Model.Text</div>
                        <a href="#" class="link">@Model.LinkContent</a>
                    </div>
                </div>
            </div>

            @if (Model.Item2 != null)
            {
                <div class="item-2">
                    @foreach (var item in Model.Item2)
                    {
                        <partial name="/Views/Partials/Components/_ProductCardItem.cshtml" model="item" />
                    }
                </div>
            }

        </div>
    </div>
</section>
