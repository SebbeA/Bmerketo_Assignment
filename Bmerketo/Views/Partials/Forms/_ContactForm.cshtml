@model ContactFormViewModel

<section class="contact-form">
    <div class="container">

        @if (@TempData["AlertMessage"] != null)
        {
            <div class="alert alert-success text-center">
                @TempData["AlertMessage"]
            </div>
        }

        <div class="title">Write something</div>
        <form method="post" novalidate>

            <div asp-validation-summary="ModelOnly"></div>

            <div class="name form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name">
                <small><span asp-validation-for="Name" class="text-danger"></span></small>
            </div>
            <div class="email form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email">
                <small><span asp-validation-for="Email" class="text-danger"></span></small>
            </div>
            <div class="phoneNumber form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber">
            </div>
            <div class="companyName form-group">
                <label asp-for="CompanyName"></label>
                <input asp-for="CompanyName">
            </div>
            <div class="message form-group">
                <label asp-for="Message"></label>
                <textarea asp-for="Message"></textarea>
                <small><span asp-validation-for="Message" class="text-danger"></span></small>
            </div>
            <div class="terms form-checkbox-group">
                <label class="custom-checkbox">
                    Save my name, email in the this browser for the next time I comment.
                    <input type="checkbox" checked="checked">
                    <span class="checkmark"></span>
                </label>
            </div>
            <button type="submit" class="btn-theme">Submit</button>
        </form>
    </div>
</section>
