@model TopSellingViewModel

<section class="top-selling">
    <div class="container-fluid">

        @if (Model.Title != null)
        {
            <h1 class="collection-title">@Model.Title</h1>
        }
        
        @if (Model.TopSelling != null)
        {
            <div class="collection-grid">
                @foreach (var item in Model.TopSelling)
                {
                    <partial name="/Views/Partials/Components/_ProductCardItem.cshtml" model="item" />
                }
            </div>
        }

        @if (Model.Arrows)
        {
            <div class="load-more">
                <button class="btn-outline-white me-1"><i class="fa-solid fa-chevron-left"></i></button>
                <button class="btn-outline-white ms-1"><i class="fa-solid fa-chevron-right"></i></button>
            </div>
        }

    </div>
</section>
